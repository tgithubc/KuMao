<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">

    <com.tgithubc.kumao.widget.dragLayout.StickyHeaderLayout
        android:id="@+id/sticky_header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="250dp">

            <FrameLayout
                android:id="@+id/head_rootLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@color/black_alpha_40">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/head_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/list_page_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/list_page_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.tgithubc.kumao.widget.dragLayout.StickyHeaderLayout>

    <com.tgithubc.kumao.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:tag="titleBar"
        app:leftIconId="@drawable/title_back_up_white"/>
</RelativeLayout>