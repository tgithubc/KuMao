<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/search_result_album_pic"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/search_result_album_entrance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/search_result_album_entrance"
        android:layout_toRightOf="@id/search_result_album_pic"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/search_result_album_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/search_result_album_publish_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_result_album_name"
            android:layout_marginTop="5dp"
            android:textColor="#3a3a3a"/>
    </RelativeLayout>

    <View
        style="@style/Widget.DivideLine"/>
</RelativeLayout>