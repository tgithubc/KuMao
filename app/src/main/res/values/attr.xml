<resources>

    <declare-styleable name="BottomTabStyle">
        <!--文字大小-->
        <attr name="bottom_tab_item_text_size" format="dimension"/>
        <!--文字选中颜色-->
        <attr name="bottom_tab_item_text_selected_color" format="color"/>
        <!--文字默认颜色-->
        <attr name="bottom_tab_item_text_normal_color" format="color"/>

        <!--icon大小-->
        <attr name="bottom_tab_item_icon_size" format="dimension"/>

        <!--消息角标背景颜色-->
        <attr name="bottom_tab_item_message_bkg_color" format="color"/>
        <!--消息角标文字大小-->
        <attr name="bottom_tab_item_message_text_size" format="dimension"/>
        <!--消息角标文字颜色-->
        <attr name="bottom_tab_item_message_tip_text_color" format="color"/>

        <!--红点提示大小-->
        <attr name="bottom_tab_item_red_dot_size" format="dimension"/>

        <!--中间扩展布局-->
        <attr name="bottom_tab_center_view" format="reference"/>
        <!--中间扩展布局留宽-->
        <attr name="bottom_tab_center_view_width" format="dimension"/>
        <!--中间扩展布局左右padding-->
        <attr name="bottom_tab_center_view_padding_lr" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleMusicView">
        <attr name="circle_music_view_progress_width" format="dimension" />
        <attr name="circle_music_view_progress_slot_color" format="color" />
        <attr name="circle_music_view_progress_buffer_color" format="color" />
        <attr name="circle_music_view_progress_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MusicalNoteLayout">
        <attr name="circle_music_view_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference" />

    <style name="SwipeBackLayout">
        <item name="shadow_left">@mipmap/shadow_left</item>
        <item name="shadow_right">@mipmap/shadow_right</item>
        <item name="shadow_bottom">@mipmap/shadow_bottom</item>
    </style>

    <declare-styleable name="RecyclerViewBanner">
        <attr name="rvb_interval" format="integer" />
        <attr name="rvb_showIndicator" format="boolean" />
        <attr name="rvb_indicatorSelectedSrc" format="color|reference" />
        <attr name="rvb_indicatorUnselectedSrc" format="color|reference" />
        <attr name="rvb_indicatorSize" format="dimension|reference" />
        <attr name="rvb_indicatorSpace" format="dimension|reference" />
        <attr name="rvb_indicatorMargin" format="dimension|reference" />
        <attr name="rvb_indicatorGravity" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="rvb_autoPlaying" format="boolean" />
    </declare-styleable>


    <attr name="TagLayoutStyle" format="reference" />
    <declare-styleable name="TagLayout">
        <attr name="tag_text_color" format="color" />
        <attr name="tag_border_color" format="color" />
        <attr name="tag_border_width" format="dimension" />
        <attr name="tag_text_size" format="dimension" />
        <attr name="tag_corner_radius" format="dimension" />
        <attr name="tag_horizontal_range" format="dimension" />
        <attr name="tag_vertical_range" format="dimension" />
        <attr name="tag_lr_padding" format="dimension" />
        <attr name="tag_tb_padding" format="dimension" />
        <attr name="tag_style" format="enum">
            <enum name="STROKE" value="1"/>
            <enum name="FILL" value="2"/>
        </attr>
    </declare-styleable>
</resources>